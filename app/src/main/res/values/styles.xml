<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.RidePricing" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <item name="colorPrimaryContainer">@color/primary_container_color</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_color</item>
        
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/on_secondary_color</item>
        <item name="colorSecondaryContainer">@color/secondary_container_color</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_color</item>
        
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/on_error_color</item>
        <item name="colorErrorContainer">@color/error_container_color</item>
        <item name="colorOnErrorContainer">@color/on_error_container_color</item>
        
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/on_surface_color</item>
        <item name="colorSurfaceVariant">@color/surface_variant_color</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_color</item>
        
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:navigationBarColor">@color/surface_color</item>
    </style>

    <!-- Fullscreen theme for onboarding -->
    <style name="Theme.RidePricing.Fullscreen" parent="Theme.RidePricing">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/surface_color</item>
    </style>

    <!-- Settings theme -->
    <style name="Theme.RidePricing.Settings" parent="Theme.RidePricing">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
</resources>
