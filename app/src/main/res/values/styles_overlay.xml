<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Overlay container style -->
    <style name="OverlayContainer" parent="">
        <item name="android:background">@drawable/overlay_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <!-- Overlay text style -->
    <style name="OverlayText">
        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    
    <!-- Overlay title style -->
    <style name="OverlayTitle" parent="OverlayText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Overlay value style -->
    <style name="OverlayValue" parent="OverlayText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Overlay close button style -->
    <style name="OverlayCloseButton">
        <item name="android:background">@drawable/overlay_button_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
