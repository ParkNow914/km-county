<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Configurações gerais do Firebase Performance Monitoring -->
    <bool name="firebase_performance_collection_enabled">true</bool>
    <bool name="firebase_performance_logcat_enabled">false</bool>
    
    <!-- Configurações de coleta de dados -->
    <bool name="firebase_performance_is_data_collection_enabled">true</bool>
    <bool name="firebase_performance_is_enabled">true</bool>
    
    <!-- Limites de rastreamento -->
    <integer name="firebase_performance_max_global_http_metric_count">150</integer>
    <integer name="firebase_performance_max_http_request_metric_count">50</integer>
    <integer name="firebase_performance_max_trace_count">50</integer>
    <integer name="firebase_performance_max_trace_custom_attribute_count">5</integer>
    <integer name="firebase_performance_max_trace_custom_attribute_size">100</integer>
    <integer name="firebase_performance_max_trace_name_length">100</integer>
    
