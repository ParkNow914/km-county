    <bool name="firebase_performance_debug_mode">false</bool>
    <bool name="firebase_performance_logcat_enabled">false</bool>
    
    <!-- Configurações de monitoramento de tela -->
    <bool name="firebase_performance_screen_trace_enabled">true</bool>
    <integer name="firebase_performance_screen_trace_sampling_rate">1</integer>
    
    <!-- Configurações de desempenho de inicialização -->
    <bool name="firebase_performance_startup_trace_enabled">true</bool>
    <integer name="firebase_performance_startup_sample_rate">1</integer>
    
    <!-- Configurações de monitoramento de rede -->
    <bool name="firebase_performance_network_trace_enabled">true</bool>
    <integer name="firebase_performance_network_sample_rate">1</integer>
    
