    <bool name="firebase_performance_is_automatic_screen_reporting_enabled">true</bool>
    <bool name="firebase_performance_is_manual_screen_reporting_enabled">true</bool>
    
    <!-- Configurações de rede -->
    <integer name="firebase_performance_network_request_sampling_rate">1</integer>
    <integer name="firebase_performance_trace_sampling_rate">1</integer>
    
    <!-- Configurações de cache -->
    <integer name="firebase_performance_max_cache_size_bytes">1048576</integer> <!-- 1MB -->
    <integer name="firebase_performance_max_cache_age_ms">604800000</integer> <!-- 7 dias -->
    
    <!-- Configurações de log -->
    <bool name="firebase_performance_log_source_enabled">false</bool>
    <integer name="firebase_performance_log_source_priority">2</integer> <!-- Log.INFO -->
    
