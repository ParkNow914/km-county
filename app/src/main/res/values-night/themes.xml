<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for night mode -->
    <style name="Theme.KMCounty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        
        <!-- Surface colors for dark theme -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        
        <!-- Background colors for dark theme -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        
        <!-- Text colors for dark theme -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        
        <!-- Material Components theming -->
        <item name="materialButtonStyle">@style/Widget.KMCounty.Button</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.KMCounty.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.KMCounty.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.KMCounty.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.KMCounty.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.KMCounty.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.KMCounty.Caption</item>
        
        <!-- CardView style -->
        <item name="cardViewStyle">@style/Widget.KMCounty.CardView</item>
    </style>
    
    <!-- Theme for Onboarding screens in night mode -->
    <style name="Theme.KMCounty.Onboarding" parent="Theme.KMCounty">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    
    <!-- Overlay theme for night mode -->
    <style name="Theme.KMCounty.Overlay" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>
